<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/MyApp.ActionBar</item>
        <item name="android:textColor">@color/app_text</item>   
        <item name="android:itemTextAppearance">@style/MyTheme.Menu.ItemText</item>
    </style>
    
    <style name="MyApp.ActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@color/action_bar_background</item>
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
        
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/app_title_text</item>
    </style>  
    
    <style name="MyTheme.Menu.ItemText" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/app_title_text</item>
    </style> 

    <!-- Buttons theme-->
    <style name="Button">
        <item name="android:background">@drawable/buttons</item>
        <item name="android:textColor">@color/btn_text</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Header Text theme-->
    <style name="Header">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@color/header_text</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- ListView Items theme-->
    <style name="ListItem">
        <item name="android:textColor">@color/item_text</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <!-- ListView Small Items theme-->
    <style name="ListItem.Small" parent="ListItem">
        <item name="android:paddingLeft">5dp</item>
    </style>
    
    <!-- EditText theme-->
    <style name="EditText">
        <item name="android:textColor">@color/item_text</item>
    </style>
    
    <!-- Dropdown Item theme-->
    <style name="DropdownItem">
        <item name="android:textColor">@color/item_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">5dp</item>
    </style>
    
    <!-- Informational Messages theme-->
    <style name="InformStatement">
        <item name="android:textColor">@color/inform_text</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal </item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
